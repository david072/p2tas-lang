{
    "name": "p2tas-lang",
    "displayName": "Portal 2 TAS tools Lang",
    "description": "Syntax highlighting, snippets, autocompletion for the Portal 2 TASing script language",
    "version": "0.4.0",
    "publisher": "RainbowwPhoenixx",
    "repository": {
        "type": "git",
        "url": "https://github.com/RainbowwPhoenixx/p2tas-lang"
    },
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "contributes": {
        "languages": [
            {
                "id": "p2tas",
                "aliases": [
                    "Portal 2 TAS script",
                    "p2tas"
                ],
                "extensions": [
                    ".p2tas"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "p2tas",
                "scopeName": "source.p2tas",
                "path": "./syntaxes/p2tas.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "p2tas",
                "path": "./snippets.json"
            }
        ],
        "commands": [
            {
                "command": "p2tas-lang.relativeFromAbsoluteTick",
                "title": "Relative tick from absolute tick",
                "category": "P2-TAS"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "p2tas-lang.relativeFromAbsoluteTick",
                    "when": "editorLangId == p2tas"
                }
            ]
        },
        "keybindings": [
            {
                "command": "p2tas-lang.relativeFromAbsoluteTick",
                "key": "ctrl+shift+t",
                "mac": "cmd+shift+t"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:p2tas",
        "onCommand:p2tas-lang.relativeFromAbsoluteTick"
    ],
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "lint": "eslint . --ext .ts,.tsx",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^12.12.0",
        "@types/vscode": "^1.32.0",
        "@typescript-eslint/eslint-plugin": "^4.16.0",
        "@typescript-eslint/parser": "^4.16.0",
        "eslint": "^7.21.0",
        "typescript": "^4.2.2"
    }
}
